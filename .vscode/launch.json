{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with MSVC",
      "type": "cppvsdbg", // 使用 Visual Studio 调试器
      "request": "launch",
      "program": "${workspaceFolder}/build/Debug/SoftwareRasterizerExample.exe", // 可执行文件路径
      "args": [], // 程序运行时的命令行参数
      "stopAtEntry": false, // 是否在程序入口处暂停
      "cwd": "${workspaceFolder}", // 工作目录
      "environment": [],
      "console": "integratedTerminal", // 使用集成终端显示程序输出
      "preLaunchTask": "compile prj"
    }
  ]
}